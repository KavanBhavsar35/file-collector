{
  "name": "file-collector",
  "displayName": "File Collector",
  "description": "Collect files via checkboxes and generate a single output file",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "file-collector",
          "title": "File Collector",
          "icon": "resources/file-collector.svg"
        }
      ]
    },
    "views": {
      "file-collector": [
        {
          "id": "fileCollectorView",
          "name": "Files",
          "type": "tree"
        }
      ]
    },
    "commands": [
      {
        "command": "fileCollector.generateFile",
        "title": "File Collector: Generate Combined File",
        "icon": "$(file-add)"

      },
      
      {
        "command": "fileCollector.toggleAllFiles",
        "title": "File Collector: Toggle All Files",
        "icon": "$(check-all)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "fileCollector.checkboxChanged",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "fileCollector.generateFile",
          "when": "view == fileCollectorView",
          "group": "navigation"
        },
        {
          "command": "fileCollector.toggleAllFiles",
          "when": "view == fileCollectorView",
          "group": "navigation"
        }
      ]
    },
    "scripts": {
      "vscode:prepublish": "npm run package",
      "compile": "npm run check-types && npm run lint && node esbuild.js",
      "watch": "npm-run-all -p watch:*",
      "watch:esbuild": "node esbuild.js --watch",
      "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
      "package": "npm run check-types && npm run lint && node esbuild.js --production",
      "compile-tests": "tsc -p . --outDir out",
      "watch-tests": "tsc -p . -w --outDir out",
      "pretest": "npm run compile-tests && npm run compile && npm run lint",
      "check-types": "tsc --noEmit",
      "lint": "eslint src",
      "test": "vscode-test"
    },
    "devDependencies": {
      "@types/vscode": "^1.96.0",
      "@types/mocha": "^10.0.10",
      "@types/node": "20.x",
      "@typescript-eslint/eslint-plugin": "^8.17.0",
      "@typescript-eslint/parser": "^8.17.0",
      "eslint": "^9.16.0",
      "esbuild": "^0.24.0",
      "npm-run-all": "^4.1.5",
      "typescript": "^5.7.2",
      "@vscode/test-cli": "^0.0.10",
      "@vscode/test-electron": "^2.4.1"
    }
  }
}